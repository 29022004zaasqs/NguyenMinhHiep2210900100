<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Shop</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        /* Navbar Styling */
        .navbar-inverse {
            background-color: #2c3e50;
            border-color: #1a242f;
            font-size: 16px;
        }

            .navbar-inverse .navbar-brand {
                color: #ecf0f1;
                font-weight: bold;
                font-size: 20px;
            }

            .navbar-inverse .navbar-nav > li > a {
                color: #bdc3c7;
                transition: color 0.3s;
            }

                .navbar-inverse .navbar-nav > li > a:hover {
                    color: #ecf0f1;
                }

            .navbar-inverse .navbar-toggle .icon-bar {
                background-color: #ecf0f1;
            }

        /* Container Padding */
        .body-content {
            padding-top: 70px;
        }

        /* Footer Styling */
        footer {
            background-color: #2c3e50;
            color: #bdc3c7;
            padding: 20px;
            text-align: center;
            margin-top: 40px;
        }

            footer p {
                margin: 0;
                font-size: 14px;
            }

        /* Button Styling */
        .navbar-toggle {
            border-color: #1a242f;
        }

        /* General Typography */
        body {
            font-family: Arial, sans-serif;
            color: #2c3e50;
        }

        h1, h2, h3, h4, h5, h6 {
            color: #34495e;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Shop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("SanPham", "Index", "NMH_SanPhams")</li>
                    <li>@Html.ActionLink("ChiTietDonHang", "Index", "NMH_ChiTietDonHangs")</li>
                    <li>@Html.ActionLink("KhachHang", "Index", "NMH_KhachHangs")</li>
                    <li>@Html.ActionLink("NhanVien", "Index", "NMH_NhanViens")</li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <!-- Scripts -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
